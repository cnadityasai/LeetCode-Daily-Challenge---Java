// My solution

class Solution {
    public List<List<Integer>> generate(int numRows) {
        List<List<Integer>> ans = new ArrayList<>(numRows);

        for(int row=0; row<numRows; row++){
            ans.add(new ArrayList<>(row+1));
            ans.get(row).add(1);
            for(int col=1; col<row; col++){
                ans.get(row).add((ans.get(row-1).get(col-1) + ans.get(row-1).get(col)));
            }
            if(row > 0) ans.get(row).add(1);
        }

        return ans;
    }
}
