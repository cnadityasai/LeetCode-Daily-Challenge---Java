// My Solution (Optimal)

class Solution {
    public int compareVersion(String version1, String version2) {
        String[] v1 = version1.split("\\.");
        String[] v2 = version2.split("\\.");
        int res = 0;

        for(int i=0; i<Math.max(v1.length, v2.length); i++){
            int firstInt = i < v1.length ? Integer.parseInt(v1[i]) : 0;
            int secondInt = i < v2.length ? Integer.parseInt(v2[i]) : 0;
            if(firstInt < secondInt){
                res = -1;
                break;
            } else if (firstInt > secondInt){
                res = 1;
                break;
            } else {
                res = 0;
            }
        }
        
        return res;
    }
}

/*

    1.2.2.2.3      1.23.5.1.6



